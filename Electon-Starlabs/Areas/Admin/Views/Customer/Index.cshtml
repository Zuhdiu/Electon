@model List<Customer>

<style>

    .dataTables_length {
        color: white;
    }

    .dataTables_filter {
        color: white;
    }

    .dataTables_info {
        color: white;
    }

    #tblData_wrapper {
        margin-left: 5%;
        margin-right: 5%;
    }

    body {
        background: rgba(219,21,99,0.8);
        background: #0F2027; /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #2C5364, #203A43, #0F2027); /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #2C5364, #203A43, #0F2027); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    }
</style>
<h1 style="text-align:center; margin-top: 5vh; color:white;">Manage Customers</h1>
<div class="backgroundColoring">
    <table id="tblData" class="table wrapperTable" style="background:white;">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Manage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>
                        @{
                            <a type="button" class="btn btn-primary" asp-action="Details" asp-route-Id="@item.Id" style="color:white;">Details</a>
                            if (item.Locked)
                            {
                                <a type="button" class="btn btn-dark" asp-action="LockCustomer" asp-route-Id="@item.Id" style="color:white;">Unlock</a>
                            }
                            else
                            {
                                <a type="button" class="btn btn-danger" asp-action="LockCustomer" asp-route-Id="@item.Id" style="color:white;">Lock</a>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
    $(document).ready(function () {
        $('#tblData').DataTable();

    });
    </script>
}